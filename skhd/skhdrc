# change window focus within space
alt + cmd + ctrl + shift - j : yabai -m window --focus south
alt + cmd + ctrl + shift - k : yabai -m window --focus north
alt + cmd + ctrl + shift - h : yabai -m window --focus west
alt + cmd + ctrl + shift - l : yabai -m window --focus east

#change focus between external displays (left and right)
alt + cmd + ctrl + shift - a: yabai -m display --focus west
alt + cmd + ctrl + shift - d: yabai -m display --focus north
alt + cmd + ctrl + shift - s: yabai -m display --focus south
alt + cmd + ctrl + shift - f: yabai -m display --focus east

# rotate layout clockwise
alt + cmd + ctrl + shift - r : yabai -m space --rotate 270

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# toggle window float
alt + cmd + ctrl + shift - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
alt + cmd + ctrl + shift - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
alt + cmd + ctrl + shift - e : yabai -m space --balance

# swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

#move window to prev and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;

# move window to display left and right
shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
shift + alt - g : yabai -m window --display east; yabai -m display --focus east;

# move window to space #
alt + cmd + ctrl + shift - 1 : yabai -m window --space 1;
alt + cmd + ctrl + shift - 2 : yabai -m window --space 2;
alt + cmd + ctrl + shift - 3 : yabai -m window --space 3;
alt + cmd + ctrl + shift - 4 : yabai -m window --space 4;
alt + cmd + ctrl + shift - 5 : yabai -m window --space 5;
alt + cmd + ctrl + shift - 6 : yabai -m window --space 6;
alt + cmd + ctrl + shift - 7 : yabai -m window --space 7;
alt + cmd + ctrl + shift - 8 : yabai -m window --space 8;
alt + cmd + ctrl + shift - 9 : yabai -m window --space 9;
alt + cmd + ctrl + shift - 0 : yabai -m window --space 0;

# stop/start/restart yabai
ctrl + alt - q : brew services stop yabai
ctrl + alt - s : brew services start yabai
ctrl + alt - r : brew services restart yabai
